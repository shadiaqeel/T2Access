    @Styles.Render("~/Assets/lib/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Assets/lib/gritter/css/jquery.gritter.css")
    <!-- Custom styles for this template -------->
    @Styles.Render("~/Assets/User/css/style.css")
    @Styles.Render("~/Assets/User/css/style-responsive.css")
    <!--==========================================================================================================================================================================================
    @RenderSection("Styles", false)



    </head>
    <body>
        <body>
            <section id="container">
    <!-- **********************************************************************************************************************************************************
    TOP BAR CONTENT & NOTIFICATIONS
    *********************************************************************************************************************************************************** -->
    <!--header start-->
    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="index.html" class="logo"><b>t<span id="t">t</span><span>Ac</span>cess</b></a>
        <!--logo end-->
        <div class="nav notify-row" id="top_menu">

        </div>
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li>
                    @Html.ActionLink(Resource.Logout, "LogOut", "Account", null, new { @class = "logout" })
                </li>
            </ul>
        </div>
    </header>
    <!--header end-->
    <!-- **********************************************************************************************************************************************************
    MAIN SIDEBAR MENU
    *********************************************************************************************************************************************************** -->
    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">
                <!--<p class="centered"><a href="profile.html"><img src="Assets/User/shadi.jpg" class="img-circle" width="100" height="100"></a></p>-->
                <h5 class="centered">@Session["FirstName"]  @Session["LastName"]  </h5>
                <li class="mt">
                    <a class="@Html.IsSelected("User","Index","active")" href="@Url.Action("Index","User")">
                        <i class="fa fa-dashboard"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="sub-menu">
                    <a href="javascript:;" class="@Html.IsSelected("Gate,User","UserManagment,GateManagment","active")">
                        <i class="fa fa-desktop"></i>
                        <span>@Resource.Accounts</span>
                    </a>
                    <ul class="sub">

                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "UserManagment" ? "active" : "")"> <a href="@Url.Action("UserManagment","User")">@Resource.Users</a></li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "GateManagment" ? "active" : "")"><a href="@Url.Action("GateManagment","Gate")">@Resource.Gates</a></li>

                    </ul>
                </li>

            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->
    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper site-min-height">










            @RenderBody()










        </section>
        <!--main content end-->

        <!--footer start-->
        <footer class="site-footer navbar-fixed-bottom">
            <div class="text-center">
                <p>
                    &copy; Copyrights <strong>T2 - business research and development </strong><br>All Rights Reserved
                </p>

                <a href="index.html#" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
    </section>
    <!--footer end-->
    </section>






    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
